{
  "name": "aurora-management-interface",
  "version": "0.4.0",
  "description": "Aurora Management Interface",
  "author": "Aurora OpenShift Utvikling",
  "license": "Apache-2.0",
  "main": "./lib/middleware.js",
  "bin": {
    "aurora-mi": "./lib/bin/ami.js"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://nexus-npm.aurora.skead.no/npm/repository/npm-internal"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run clean && npm run build-ts && npm run tslint",
    "clean": "rimraf lib coverage *.tgz",
    "serve": "nodemon _example/index.js --watch _example --watch src",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "nodemon --inspect _example/index.js"
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "express": "^4.16.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.33",
    "@types/supertest": "^2.0.0",
    "concurrently": "^3.4.0",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.0",
    "tslint": "^5.0.0",
    "typescript": "^2.5.3"
  }
}
