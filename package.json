{
  "name": "aurora-management-interface",
  "groupId": "no.skatteeaten.aurora",
  "version": "0.6.0",
  "description": "Aurora Management Interface",
  "author": "Aurora OpenShift Utvikling",
  "license": "Apache-2.0",
  "main": "./lib/middleware.js",
  "bin": {
    "aurora-mi": "./lib/bin/ami.js"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://nexus-npm.aurora.skead.no/npm/repository/npm-internal"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run clean && npm run tslint && npm run build-ts",
    "clean": "rimraf lib coverage *.tgz",
    "serve": "nodemon _example/index.js --watch _example --watch src",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "nodemon --inspect _example/index.js",
    "lint:prettier": "prettier -l '{src,test}/**/*.ts'",
    "lint:prettier-fix": "prettier --write '{src,test}/**/*.ts'"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "express": "^4.16.4",
    "prom-client": "11.5.3"
  },
  "devDependencies": {
    "@skatteetaten/ci-scripts": "2.0.2",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.6",
    "@types/supertest": "2.0.8",
    "concurrently": "5.0.2",
    "express": "4.17.1",
    "jest": "24.9.0",
    "merge": "1.2.1",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "supertest": "4.0.2",
    "ts-jest": "24.3.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.4",
    "prom-client": "11.5.3"
  }
}
