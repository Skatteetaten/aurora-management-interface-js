{
  "name": "aurora-management-interface",
  "version": "0.4.2",
  "description": "Aurora Management Interface",
  "author": "Aurora OpenShift Utvikling",
  "license": "Apache-2.0",
  "main": "./lib/middleware.js",
  "bin": {
    "aurora-mi": "./lib/bin/ami.js"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://nexus-npm.aurora.skead.no/npm/repository/npm-internal"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run clean && npm run tslint && npm run build-ts",
    "clean": "rimraf lib coverage *.tgz",
    "serve": "nodemon _example/index.js --watch _example --watch src",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "nodemon --inspect _example/index.js",
    "lint:prettier": "prettier -l '{src,test}/**/*.ts'",
    "lint:prettier-fix": "prettier --write '{src,test}/**/*.ts'"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  }
}
